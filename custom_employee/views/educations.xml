<odoo>
    <data>
        <record id="education_tree_view" model="ir.ui.view">
            <field name="name">Education Tree View</field>
            <field name="model">custom_employee.educations</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="image"/>
                </tree>
            </field>
        </record>
        <record id="education_form_view" model="ir.ui.view">
            <field name="name">Education Form View</field>
            <field name="model">custom_employee.educations</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="image"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>