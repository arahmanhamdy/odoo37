<odoo>
    <data>

        <record id="custom_employee_tree_view" model="ir.ui.view">
            <field name="name">Relative Tree View</field>
            <field name="model">custom_employee.relatives</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="dateOfBirth"/>
                </tree>
            </field>
        </record>
        <record id="custom_employee_form_view" model="ir.ui.view">
            <field name="name">Relative Form View</field>
            <field name="model">custom_employee.relatives</field>
            <field name="arch" type="xml">

                <form>
                    <group>
                        <field name="name"/>
                        <field name="gender"/>
                        <field name="dateOfBirth"/>
                    </group>
                </form>

            </field>
        </record>
    </data>
</odoo>