<odoo>
    <data>
        <record id="certificate_tree_view" model="ir.ui.view">
            <field name="name">Certificate Tree View</field>
            <field name="model">custom_employee.certificates</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="certificate"/>
                </tree>
            </field>
        </record>
        <record id="certificate_form_view" model="ir.ui.view">
            <field name="name">Certificate Form View</field>
            <field name="model">custom_employee.certificates</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="certificate"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>